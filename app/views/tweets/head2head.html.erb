<% if current_user %>  
  Welcome, <%= current_user.name %>!  
<% else %>  
  <%= link_to "Sign in with Twitter", "/auth/twitter" %>  
<% end %>


<h1>Two Tweets, **** to Head</h1>


<div id="tweet_1">
	<div class="name">
		@<%= @tweets[0].tweeter["screen_name"] %>		
	</div>
	<div class="tweet">
		<%= image_tag @tweets[0].tweeter["profile_image_url"], :class=> "avatar"%>
		<span class="tweet-text">
			<%= @tweets[0].twitter_status.text %>	
		</span>
	</div>
	<div class="vote">
		<%= render :partial => "tweets/upvote", :locals => { :tweet => @tweets[0] } %>
	</div>
</div>

<div id="versus">
	VS.
</div>

